<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeLogActivity"
    android:background="@drawable/tsppsp_fondo"
    tools:targetApi="O">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorBlanco"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/llPrincipal1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIME LOG"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/colorNegro"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:background="@color/colorBlanco"
        android:layout_below="@+id/llPrincipal1"
        android:id="@+id/llPrincipa2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:weightSum="100">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorNegro"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="Phase:"
                android:layout_weight="70"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spFase"
                android:layout_weight="30"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorNegro"
                android:textAlignment="center"
                android:textSize="20sp"
                android:id="@+id/etHoraInicio"
                android:hint="Start"
                android:layout_weight="30"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnHoraInicio"
                android:text="Start"
                android:layout_weight="70"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorNegro"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/etMinutosInterrupcion"
                android:hint="Interruption in Minutes"
                android:layout_weight="30"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorNegro"
                android:textAlignment="center"
                android:textSize="20sp"
                android:id="@+id/etHoraFinal"
                android:hint="Finish"
                android:layout_weight="30"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnHoraFinal"
                android:text="Stop"
                android:layout_weight="70"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorNegro"
                android:textAlignment="center"
                android:textSize="20sp"
                android:id="@+id/tvHoraDelta"
                android:hint="Time Final" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingBottom="30dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/colorNegro"
                android:textAlignment="center"
                android:textSize="20sp"
                android:id="@+id/etComentarios"
                android:hint="Comements"
                android:inputType="textMultiLine"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:id="@+id/btnResgistrar"
                android:text="Register"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>